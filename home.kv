            theme_icon_color: "Custom"
            pos_hint: {"x":.87, "y":.57}
            disabled_color: root.cpbBarColor
        MDFloatLayout:
            #md_bg_color: 1, 0, 100/255, .1
            CircularProgressBar:
                size_hint: None, None
                size: 50, 50
                adaptive_size: True
                pos_hint: {"x": .75, "y": .3}
                value: root.cpbValue
                bar_color: root.cpbBarColor

<CircularProgressBar>
    canvas.before:
        Color:
            rgba: root.bar_color + [0.3]
        Line:
            width: root.bar_width
            ellipse: (self.x, self.y, self.width, self.height, 0, 360)
    canvas.after:
        Color:
            rgb: root.bar_color
        Line:
            width: root.bar_width
            ellipse: (self.x, self.y, self.width, self.height, 0, root.set_value*3.6)
    MDLabel:
        text: root.text
        bold: True
        font_size: "15sp"
        pos_hint: {"center_x": .5, "center_y": .5}
        halign: "center"
        color: root.bar_color

