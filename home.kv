            bold: True
            pos_hint: {"x":.1, "y":.27}
            font_size: '14sp'
            text: root.text1
        MDLabel:
            bold: True
            pos_hint: {"x":.11, "y": .07}
            font_size: '25sp'
            text: root.text2
            color: root.cpbBarColor
        MDLabel:
            #bold: True
