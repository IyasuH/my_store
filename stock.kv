#:kivy 2.1.0
#:import Factory kivy.factory.Factory

<New_customer_layout>:
	customer_name: customer_name
	customer_tin_number: customer_tin_number
	customer_region: customer_region
	customer_sub_city: customer_sub_city
	customer_wereda: customer_wereda
	customer_phone_number: customer_phone_number
	customer_frequency_of_purchase: customer_frequency_of_purchase
	customer_account_created_date: customer_account_created_date
	customer_total_purchase: customer_total_purchase
	customer_bank_account_number: customer_bank_account_number
	id: new_customer_layout
	orientation: "vertical"
	spacing: "20sp"
	md_bg_color: app.theme_cls.bg_dark
	size_hint_y: None
	height: "400dp"
	ScrollView:
		smooth_scroll_end: 10
		MDList:
			spacing: "5dp"
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Customer Name"
				MDTextField:
					id: customer_name
					multiline: False
					mode: "rectangle"
					hint_text: 'Customer Name'

			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Tin Number"
				MDTextField:
					id: customer_tin_number
					hint_text: "Tin Number"
					multiline: False
					mode: "rectangle"
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Region"
				MDTextField:
					id: customer_region
					hint_text: "Region"
					mode: "rectangle"
					multiline: False
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Sub-City"
				MDTextField:
					id: customer_sub_city
					hint_text: "Sub-City"
					mode: "rectangle"
					multiline: False
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Wereda"
				MDTextField:
					id: customer_wereda
					hint_text: "Wereda"
					mode: "rectangle"
					multiline: False
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Phone Number"
				MDTextField:
					id: customer_phone_number
					hint_text: "Phone Number"
					mode: "rectangle"
					multiline: False
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Account Created-Date"
				MDTextField:
					id: customer_account_created_date
					hint_text: "Account Created Date"
					mode: "rectangle"
					multiline: False
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Frequency Of Purchase"
				MDTextField:
					id: customer_frequency_of_purchase
					hint_text: "Frequency of Purchase"
					mode: "rectangle"
					multiline: False
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Total Purchase"
				MDTextField:
					id: customer_total_purchase
					hint_text: "Total Purchase"
					mode: "rectangle"
					multiline: False
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Bank Account Number"
				MDTextField:
					id: customer_bank_account_number
					hint_text: "Bank Account Number"
					text: ''
					mode: "rectangle"
					multiline: False
			MDLabel:
				text: ''
			MDGridLayout:
				cols: 2
				adaptive_height: True
				MDLabel:
					text: "Save before closing"
				MDRaisedButton:
					text: 'Add'
					on_release: root.addNewCustomer()

Store_window:
	customers_tab: customers_tab
	stock_tab: stock_tab
	stastics_tab: stastics_tab
	MDBoxLayout:
		orientation: "vertical"
		MDTopAppBar:
			title: "Stock Managment"
			pos_hint: {"y":.9}
			bold: True
			right_action_items: [["magnify"]]
		MDTabs:
			id: tabs
			tab_hint_x: True
			tab_indicator_anim: True
			tab_padding: [5, 5, 5, 1]
			elevation: 1 
			Tab:
				id: stock_tab
				title: "Stock"
			Tab:
				id: customers_tab
				title: "Customers"

			Tab:
				id: stastics_tab
				title: "Stastics"
